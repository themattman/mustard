
script#note-temp(type="template")
	li
		.pull-left.inline.user
			.delete.hide &times;
		.pull-right.inline.user
			span <%= name %> 
			a(href!="http://www.facebook.com/<%= user%>", target="_blank")
				img.fbPic(src!="https://graph.facebook.com/<%= user %>/picture?type=square")
		.note
			<% if(type != "note") { %>
			.row-fluid
				<% if(link != "") { %>
				.span3
					img(src!="<%= link %>")
				<% } %>
				.span9
					
					a(href!="<%= url %>", target="_blank") <%= title %>
					.caption
						<%= text %>
					
			<% } else { %>
			<%= text %>
			<% } %> 
			
