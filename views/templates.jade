
script#note-temp(type="template")
	li
		//-.pull-left.inline.user
			.delete &times;
		.pull-right.inline.user
			span <%= name %> 
			img.fbPic(src!="https://graph.facebook.com/<%= user %>/picture?type=square")
		.note
			<% if(type != "note") { %>
			.row-fluid
				<% if(link != "") { %>
				.span3
					img(src!="<%= link %>")
				<% } %>
				.span9
					<% if(type == "search" || type == "pic") { %>
					.title <%= title %>
					.caption
						<%= text %>
					<% } else { %>
					a(href!="<%= text %>", target="_blank") <%= title %>
					<% } %>
			<% } else { %>
			<%= text %>
			<% } %> 
			
